			<version>1.4</version>
		</dependency>
		<!-- alibaba/fastjson -->
		<dependency>
		    <groupId>com.alibaba</groupId>
		    <artifactId>fastjson</artifactId>
		    <version>1.2.46</version>
		</dependency>
		<!-- AES加密用的其中的Base64 -->
		<dependency>
		    <groupId>commons-codec</groupId>
